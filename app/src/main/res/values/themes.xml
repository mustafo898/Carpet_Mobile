<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Carpet" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">#D5CFCF</item>
        <item name="colorOnPrimary">@color/lite_mode</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="circleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="AnimationForDialog">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lines">1</item>
    </style>

    <style name="roundImageView1">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">12dp</item>
        <item name="cornerSizeTopLeft">12dp</item>
    </style>

    <style name="roundImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">12dp</item>
        <item name="cornerSizeTopLeft">12dp</item>
    </style>

    <style name="roundImageViewCard">
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomRight">80dp</item>
        <item name="cornerSizeTopRight">80dp</item>
    </style>

    <style name="rounded_profile">
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeTopLeft">80dp</item>
        <item name="cornerSizeTopRight">80dp</item>
    </style>

    <style name="admin">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize14Percent" parent="">
        <item name="cornerSize">45%</item>
        <!--        <item name="color">@color/white</item>-->
    </style>
</resources>