<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="dark.composer.carpet.presentation.fragment.splash.SplashFragment"
        android:label="fragment_default"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_splashFragment_to_adminFragment2"
            app:destination="@id/adminFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/logInFragment"
        android:name="dark.composer.carpet.presentation.fragment.login.LogInFragment"
        android:label="fragment_log_in"
        tools:layout="@layout/fragment_log_in">
        <action
            android:id="@+id/action_logInFragment_to_sigUpFragment"
            app:destination="@id/sigUpFragment" />

        <action
            android:id="@+id/action_logInFragment_to_adminFragment"
            app:popUpToInclusive="true"
            app:popUpTo="@id/action_logInFragment_to_adminFragment"
            app:destination="@id/adminFragment" />
    </fragment>

    <fragment
        android:id="@+id/sigUpFragment"
        android:name="dark.composer.carpet.presentation.fragment.signup.SignUpFragment"
        android:label="fragment_sig_up"
        tools:layout="@layout/fragment_sig_up">

        <action
            android:id="@+id/action_sigUpFragment_to_logInFragment"
            app:destination="@id/logInFragment" />
        <action
            android:id="@+id/action_sigUpFragment_to_adminFragment"
            app:popUpToInclusive="true"
            app:popUpTo="@id/action_sigUpFragment_to_adminFragment"
            app:destination="@id/adminFragment" />
    </fragment>

    <fragment
        android:id="@+id/adminFragment"
        android:name="dark.composer.carpet.presentation.fragment.admin.AdminFragment"
        android:label="fragment_admin"
        tools:layout="@layout/fragment_admin">
        <action
            android:id="@+id/action_adminFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_adminFragment_to_logInFragment"
            app:destination="@id/logInFragment" />
        <action
            android:id="@+id/action_adminFragment_to_productDetailsFragment"
            app:destination="@id/productDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="dark.composer.carpet.presentation.fragment.settings.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_settingsFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_logInFragment"
            app:destination="@id/logInFragment" />
    </fragment>
    <fragment
        android:id="@+id/factoryDetailsFragment"
        android:name="dark.composer.carpet.presentation.fragment.factory.factory_detail.FactoryDetailsFragment"
        android:label="fragment_category_details"
        tools:layout="@layout/fragment_factory_details" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="dark.composer.carpet.presentation.fragment.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile">

        <action
            android:id="@+id/action_profileFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_profileFragment_to_customersListFragment"
            app:destination="@id/customersListFragment" />
        <action
            android:id="@+id/action_profileFragment_to_addFactoryFragment"
            app:destination="@id/addFactoryFragment" />
        <action
            android:id="@+id/action_profileFragment_to_addProductFragment"
            app:destination="@id/addProductFragment" />
    </fragment>
    <fragment
        android:id="@+id/productFragment"
        android:name="dark.composer.carpet.presentation.fragment.product.ProductFragment"
        android:label="ProductFragment"
        tools:layout="@layout/fragment_product">
        <action
            android:id="@+id/action_productFragment_to_productDetailsFragment"
            app:destination="@id/productDetailsFragment"
            app:popUpTo="@id/productFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        tools:layout="@layout/fragment_product_details"
        android:id="@+id/productDetailsFragment"
        android:name="dark.composer.carpet.presentation.fragment.product.deatils.ProductDetailsFragment"
        android:label="ProductDetailsFragment" >
        <action
            android:id="@+id/action_productDetailsFragment_to_productFragment"
            app:destination="@id/productFragment" />
        <action
            android:id="@+id/action_productDetailsFragment_to_basketFragment"
            app:destination="@id/basketFragment" />
    </fragment>
    <fragment
        android:id="@+id/customersListFragment"
        android:name="dark.composer.carpet.presentation.fragment.profile.list.customer.ListFragment"
        android:label="fragment_cusomers_list"
        tools:layout="@layout/fragment_cusomers_list" >
        <action
            android:id="@+id/action_customersListFragment_to_listDetailsFragment"
            app:destination="@id/listDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/listDetailsFragment"
        android:name="dark.composer.carpet.presentation.fragment.profile.list.details.ListDetailsFragment"
        android:label="ListDetailsFragment" >
        <action
            android:id="@+id/action_listDetailsFragment_to_customersListFragment"
            app:destination="@id/customersListFragment" />
    </fragment>
    <fragment
        android:id="@+id/addFactoryFragment"
        android:name="dark.composer.carpet.presentation.fragment.profile.add.factory.AddFactoryFragment"
        android:label="fragment_add_factory"
        tools:layout="@layout/fragment_add_factory" >
        <action
            android:id="@+id/action_addFactoryFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/addProductFragment"
        android:name="dark.composer.carpet.presentation.fragment.profile.add.product.AddProductFragment"
        android:label="AddProductFragment" >
        <action
            android:id="@+id/action_addProductFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="dark.composer.carpet.presentation.fragment.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_filterProductFragment"
            app:destination="@id/filterProductFragment" />
    </fragment>
    <fragment
        android:id="@+id/filterProductFragment"
        android:name="dark.composer.carpet.presentation.fragment.search.filter.FilterProductFragment"
        android:label="FilterProductFragment" >
        <action
            android:id="@+id/action_filterProductFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/factoryFragment"
        android:name="dark.composer.carpet.presentation.fragment.factory.FactoryFragment"
        android:label="FactoryFragment" >
        <action
            android:id="@+id/action_factoryFragment_to_factoryDetailsFragment"
            app:destination="@id/factoryDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/basketFragment"
        android:name="dark.composer.carpet.presentation.fragment.basket.BasketFragment"
        android:label="fragment_basket"
        tools:layout="@layout/fragment_basket" />
</navigation>