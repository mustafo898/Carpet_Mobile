<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F4F5"
    android:orientation="vertical">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/countable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/selector_type"
            android:button="@color/transparent"
            android:elevation="4dp"
            android:padding="16dp"
            android:text="Countable" />

        <RadioButton
            android:id="@+id/uncountable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/selector_type"
            android:button="@color/transparent"
            android:elevation="4dp"
            android:padding="16dp"
            android:text="Uncountable" />
    </RadioGroup>

    <com.cooltechworks.views.shimmer.ShimmerRecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shimmer_demo_angle="15"
        app:shimmer_demo_layout="@layout/item_product_demo_grid"
        app:shimmer_demo_layout_manager_type="grid" />
</androidx.appcompat.widget.LinearLayoutCompat>