    <RadioGroup
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <RadioButton
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Countable"
            android:button="@color/transparent"
            android:padding="15dp"
            android:elevation="2dp"
            android:id="@+id/countable"
            android:background="@drawable/selector_type"/>

        <RadioButton
            android:layout_marginStart="10dp"
            android:id="@+id/uncountable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uncountable"
            android:button="@color/transparent"
            android:padding="15dp"
            android:elevation="2dp"
            android:background="@drawable/selector_type"/>
    </RadioGroup>

    <com.cooltechworks.views.shimmer.ShimmerRecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shimmer_demo_angle="15"
        android:layout_marginTop="10dp"
        app:shimmer_demo_layout="@layout/item_product_demo_grid"
        app:shimmer_demo_layout_manager_type="grid" />
