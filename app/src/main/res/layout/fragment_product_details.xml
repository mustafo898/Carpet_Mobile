<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".presentation.fragment.factory_detail.FactoryDetailsFragment">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <androidx.appcompat.widget.LinearLayoutCompat
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <androidx.appcompat.widget.LinearLayoutCompat
               android:layout_width="match_parent"
               android:gravity="center"
               android:background="@drawable/orange_back"
               android:layout_height="150dp">

               <ImageView
                   android:id="@+id/image"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"/>
           </androidx.appcompat.widget.LinearLayoutCompat>

           <androidx.appcompat.widget.LinearLayoutCompat
               android:layout_width="match_parent"
               android:layout_marginTop="20dp"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/name"
                   android:textSize="22sp"
                   android:text="Active"
                   android:textColor="@color/black"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/date"
                   android:textSize="22sp"
                   android:text="12.12.2020"
                   android:textColor="@color/black"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/size"
                   android:textSize="22sp"
                   android:text="12:15"
                   android:textColor="@color/black"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/design"
                   android:textSize="22sp"
                   android:text="12:15"
                   android:textColor="@color/black"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/pon"
                   android:textSize="22sp"
                   android:text="12:15"
                   android:textColor="@color/black"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/visible"
                   android:textSize="22sp"
                   android:text="12:15"
                   android:textColor="@color/black"/>
           </androidx.appcompat.widget.LinearLayoutCompat>

           <androidx.appcompat.widget.LinearLayoutCompat
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="5dp">

               <TextView
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:id="@+id/factory_name"
                   android:textSize="16sp"
                   android:textColor="@color/black"/>

               <TextView
                   android:textSize="16sp"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:id="@+id/create_date"
                   android:textColor="@color/black"/>
           </androidx.appcompat.widget.LinearLayoutCompat>

           <androidx.appcompat.widget.LinearLayoutCompat
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_marginTop="50dp">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/update"
                   android:textSize="22sp"
                   android:text="Update"
                   android:textColor="@color/black"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/delete"
                   android:textSize="22sp"
                   android:text="Delete"
                   android:textColor="@color/black"/>

               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:padding="20dp">

                   <de.hdodenhof.circleimageview.CircleImageView
                       android:id="@+id/imageChange"
                       android:layout_width="150dp"
                       android:layout_height="150dp"
                       android:layout_gravity="bottom"
                       android:src="@drawable/pseven_user"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintTop_toTopOf="parent" />

                   <LinearLayout
                       android:layout_width="50dp"
                       android:layout_height="50dp"
                       android:layout_gravity="bottom|end"
                       android:background="@drawable/bgcircle"
                       android:gravity="center|center_vertical"
                       app:layout_constraintBottom_toBottomOf="@+id/imageChange"
                       app:layout_constraintEnd_toEndOf="@+id/imageChange">

                       <ImageView
                           android:id="@+id/changeImage"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/ic_sales" />

                   </LinearLayout>

               </androidx.constraintlayout.widget.ConstraintLayout>

           </androidx.appcompat.widget.LinearLayoutCompat>
       </androidx.appcompat.widget.LinearLayoutCompat>
   </ScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>